<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/record_test_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/record_test_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/Widget.MaterialComponents.Toolbar.Primary">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minHeight="?actionBarSize"
                android:text="@string/record_new_test_title"
                android:fontFamily="@font/comfortaa_regular"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
            <Button
                android:id="@+id/edit_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_test"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/colorPrimary" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/view_test_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            style="@style/DashboardCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@android:color/white"
            android:elevation="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <LinearLayout
                android:id="@+id/test_id_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/ViewTestTitleTextView"
                    android:text="@string/test_id"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/test_id_textview"
                style="@style/ViewTestTextView"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/patient_id_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/test_id_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/ViewTestTitleTextView"
                    android:text="@string/patient_id"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patient_id_textview"
                style="@style/ViewTestTextView"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/test_result_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/patient_id_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.textview.MaterialTextView
                style="@style/ViewTestTitleTextView"
                android:text="@string/test_result" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/test_result_textview"
                    style="@style/ViewTestTextView" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sex_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/test_result_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/ViewTestTitleTextView"
                    android:text="@string/sex"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sex_textview"
                    style="@style/ViewTestTextView"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/age_textview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sex_textview_layout"
                    app:layout_constraintLeft_toLeftOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/ViewTestTitleTextView"
                    android:text="@string/age_group"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/agegroup_textview"
                    style="@style/ViewTestTextView" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ethnicity_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/age_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.textview.MaterialTextView
                style="@style/ViewTestTitleTextView"
                android:text="@string/ethnicity" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ethnicity_textview"
                    style="@style/ViewTestTextView"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/comorbidities_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ethnicity_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.textview.MaterialTextView
                style="@style/ViewTestTitleTextView"
                android:text="Comorbidities" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comorbidities_textview"
                    style="@style/ViewTestTextView" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/test_notes_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comorbidities_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.textview.MaterialTextView
                style="@style/ViewTestTitleTextView"
                android:text="@string/test_notes" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/test_notes_textview"
                    style="@style/ViewTestTextView"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/test_date_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/test_notes_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.textview.MaterialTextView
                style="@style/ViewTestTitleTextView"
                android:text="@string/test_date"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/test_date_textview"
                    style="@style/ViewTestTextView"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/test_location_textview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/test_date_textview_layout"
                app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.textview.MaterialTextView
                style="@style/ViewTestTitleTextView"
                android:text="@string/location"/>
                <com.google.android.material.textview.MaterialTextView
                android:id="@+id/test_location_textview"
                style="@style/ViewTestTextView"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:id="@+id/test_results_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <LinearLayout
            android:orientation="vertical"
            style="@style/DashboardCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:elevation="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.RecordTestActivity"
            android:padding="16dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/test_id_title_edittest_textview"
                style="@style/ViewTestTitleTextView"
                android:text="@string/test_id"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:visibility="gone"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/test_id_edittest_textview"
                style="@style/ViewTestTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/test_id_title_edittest_textview"
                android:textSize="18sp"
                android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/patient_id_edittext_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/test_id_edittest_textview"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="@string/patient_id"
                app:errorEnabled="true"
                android:layout_marginBottom="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patient_id_edittext_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/test_result_dropdown_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/patient_id_edittext_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:errorEnabled="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">
                <AutoCompleteTextView
                    android:id="@+id/record_test_test_result_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/test_result"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/sex_age_dropdown_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/test_result_dropdown_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="4dp"
                android:baselineAligned="false">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sex_dropdown_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:errorEnabled="true"
                    android:layout_marginBottom="4dp">
                    <AutoCompleteTextView
                        android:id="@+id/sex_test_result_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sex"
                        android:layout_marginEnd="8dp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/age_dropdown_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:errorEnabled="true"
                    android:layout_marginBottom="4dp">
                    <AutoCompleteTextView
                        android:id="@+id/age_test_result_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/age_group"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ethnicity_dropdown_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sex_age_dropdown_linearlayout"
                app:layout_constraintStart_toStartOf="parent"
                app:errorEnabled="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">
                <AutoCompleteTextView
                    android:id="@+id/ethnicity_test_result_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ethnicity"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/comorbidities_checkbox_symptom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ethnicity_dropdown_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/symptom_1"
                android:layout_marginTop="9dp"
                android:textColor="#aa000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/comorbidities_checkbox_symptom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comorbidities_checkbox_symptom1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/symptom_2"
                android:textColor="#aa000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/comorbidities_checkbox_symptom3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comorbidities_checkbox_symptom2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/symptom_3"
                android:textColor="#aa000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/comorbidities_checkbox_symptom4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comorbidities_checkbox_symptom3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/symptom_4"
                android:textColor="#aa000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/comorbidities_checkbox_symptom5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comorbidities_checkbox_symptom4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/symptom_5"
                android:textColor="#aa000000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/test_notes_edittext_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/comorbidities_checkbox_symptom5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                android:hint="@string/test_notes">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/test_notes_edittext_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:maxLength="500"
                    android:gravity="top"
                    android:layout_marginBottom="4dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingStart="64dp"
                android:paddingEnd="64dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_notes_edittext_layout"
                android:text="@string/save_test"
                android:textSize="18sp"
                android:inputType="textCapSentences|textNoSuggestions|textMultiLine" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>